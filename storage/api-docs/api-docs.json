    "paths": {
        "/api/transfer": {
            "post": {
                "tags": [
                    "Currency"
                ],
                "summary": "貨幣轉換",
                "description": "貨幣轉換",
                "operationId": "currencyTransfer",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "currency": {
                                        "type": "string"
                                    },
                                    "transCurrency": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "currency": "TWD",
                                    "transCurrency": "USD",
                                    "price": 10
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "The response code",
                                            "type": "integer"
                                        },
                                        "result": {
                                            "description": "The response price transfer",
                                            "type": "string|number"
                                        }
                                    },
                                    "type": "object",
                                    "example": {
                                        "status": 200,
                                        "result": "0.33"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "currency": {
                                            "description": "error message",
                                            "type": "string"
                                        },
                                        "transCurrency": {
                                            "description": "error message",
                                            "type": "string"
                                        },
                                        "price": {
                                            "description": "error message",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object",
                                    "example": {
                                        "currency": ["The currency or transCurrency need in TWD,JPY,USD"]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        []
    ]
}
